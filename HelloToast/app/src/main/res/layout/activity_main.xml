<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/toast_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:onClick="showToast"
        android:text="@string/toast_btn_text"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/count_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toast_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#FFFF00"
        android:gravity="center_vertical"
        android:text="@string/count_text_initial"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="160sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/count_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/count_text"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:onClick="countUp"
        android:text="@string/count_btn_text"
        android:textColor="@android:color/white" />

</RelativeLayout>